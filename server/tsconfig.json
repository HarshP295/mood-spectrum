{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,

    /* âœ… Relaxed Rules (fixes your Render build issues) */
    "noImplicitAny": false,                   // Fixes 'req' and 'res' implicit any errors
    "noImplicitReturns": false,               // Fixes 'Not all code paths return a value'
    "strictNullChecks": true,
    "noImplicitThis": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,      // Fixes 'undefined not assignable to string'
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    /* Optional performance improvements */
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
